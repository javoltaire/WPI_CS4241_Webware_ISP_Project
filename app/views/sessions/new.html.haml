- provide(:title, "Login")
.container
	%h1.text-center Logo here
	%h1.text-center Log in
	.text-center
		= form_for(:session, url: login_path, :html => {:class => "form-vertical"}) do |f|
			.form-group
				= f.email_field :email, placeholder: "Email", class: "form-control"
			.form-group
				= f.password_field :password, placeholder: "Password", class: "form-control"
			.form-group
				= f.submit "Log in", class: "btn btn-default"
			= link_to "Create Account", signup_path