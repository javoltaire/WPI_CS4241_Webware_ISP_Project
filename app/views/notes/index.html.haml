.row
	%h2.col-md-1
		Notes
	.dropdown.col-md-offset-11
		%button.dropdown-toggle(data-toggle="dropdown")
			%span.glyphicon.glyphicon-user
		%ul.dropdown-menu
			%li= link_to "Profile", profile_path
			%li.divider
			%li= link_to "Log out", logout_path, method: "delete"
.row
	#notes-container.col-md-10
		- if @notes.any?
			- @notes.each do |note|
				%a{:href => edit_note_path(note)}
					.note
						%h3= note.title
						%p= note.content
						%p= note.updated_at
						=link_to "Delete", delete_note_path(note), method: "delete"
		- else
			%p No notes Click on + to add a new Note
	.col-md-offset-11
		= link_to 'New', new_note_path	
